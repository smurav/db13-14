SELECT Reviewer.name, Movie.title
FROM Movie, Reviewer, Rating R1, Rating R2, (
	SELECT rID, mID
	FROM (
		SELECT rID, mID, COUNT(*) count
		FROM Rating
		GROUP BY rID, mID
	) Temp
	WHERE count = 2
) R3
WHERE R1.rID = Reviewer.rID
AND R1.mID = Movie.mID
AND R1.rID = R3.rID
AND R1.mID = R3.mID
AND R1.rID = R2.rID
AND R1.mID = R2.mID
AND R2.ratingDate > R1.ratingDate
AND R1.stars < R2.stars;
